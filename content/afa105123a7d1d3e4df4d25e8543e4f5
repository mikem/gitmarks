	function setParent(messageId, view){
		var previousMsgId = "";		
		previousMsgId = document.getElementById("parentId").value;		
		document.getElementById("parentId").value = messageId;		
		/*if(view =="thread"){
			toggleBody(previousMsgId,messageId);
		}*/
		clearPrevText();
		if(view == "replytostory"){
			var elem = document.getElementById("replytostory");
			if( elem != null && elem != undefined){
				document.getElementById("replytomsg").style.display = "none";
				document.getElementById("replytostory").style.display = '';
			}
		}
		if(view == "replytomsg"){
			var elem = document.getElementById("replytomsg");
			if( elem != null && elem != undefined){ 
				document.getElementById("replytostory").style.display = "none";
				document.getElementById("replytomsg").style.display = '';
			}
		}
	}
	function clearPrevText(){
		var tostory = document.getElementById("replytostory");
		var tomsg = document.getElementById("replytomsg");
		if(tostory != null && tostory != undefined ){
			tostory.style.display = "none"; 
		}if(tomsg != null && tomsg != undefined ){
			tomsg.style.display = "none"; 
		}
	}
	function toggleBody(previousMsgId,newMsgId) {
		var preElement = "";	
		if(previousMsgId != ""){ preElement = document.getElementById(previousMsgId); }
		var currentElement = document.getElementById(newMsgId);
		if ( preElement != null && preElement != "" && preElement.style.display != 'none' ) {
			preElement.style.display = 'none';
		}
		if( currentElement != null ){
			currentElement.style.display = '';
		}
	}
	function validateFields(){
		var error = "";
		if( document.getElementById("parentId").value ==""){
			document.getElementById("parentId").value = document.getElementById("rootMsgId").value;
		}
		var msgSub = document.getElementById("msgSubject").value.replace(/^\s\s*/, '').replace(/\s\s*$/, '');

		if(msgSub == ""){
			error += "Subject should not be empty \n";
		}
		var msgBody = document.getElementById("msgBody").value.replace(/^\s\s*/, '').replace(/\s\s*$/, '');
		if(msgBody == ""){
			error += "Comment should not be empty \n";
		}		
		if(error == ""){ return true; }
		else {
			alert(error);
			return false;
		}		
	}
	function toggleMsgPage(url){	
		if (window.XMLHttpRequest){	// code for IE7+, Firefox, Chrome, Opera, Safari
			xmlhttp=new XMLHttpRequest();
		}
		else{ // code for IE6, IE5
			xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
		}
		xmlhttp.onreadystatechange=function(){
			if(xmlhttp.readyState==4){
				document.getElementById('readComment').innerHTML=xmlhttp.responseText;				
			}
		}
		xmlhttp.open("GET",url,true);
		xmlhttp.send(null);
	}
	function toggleJiveView(viewName){
		var threadObj = document.getElementById("thread");
		var flatObj = document.getElementById("flat");
		
		deleteCookie('view');
		setCookie('view',viewName);

		if(threadObj != null && flatObj != null && threadObj != undefined && flatObj != undefined ){
			if(viewName=="thread"){
					document.getElementById("thread").style.display='block';
					document.getElementById("flat").style.display='none';
			}else{
					document.getElementById("thread").style.display='none';
					document.getElementById("flat").style.display='block';
			}
		}
	}	
	//Following to launch email window for article/Blogs
	function emailLauncher(filePath,storyURL) {
		uri = filePath + encodeURIComponent(storyURL);		
		window.open(uri,"","toolbar=no,scrollbars=auto,location=no,status=no,width=480,height=415,resizable=1")
	}

	// this function will be called in case of guest user who submits comment.
	function saveFields() {
		//var error = "";
		//assigning values to hidden variables
		document.getElementById("msgSubj").value=document.getElementById("msgSubject").value;
		document.getElementById("msgBdy").value=document.getElementById("msgBody").value;
		if(!validateFields()){
			return false;
		}else{
			return true;
		}
	}

	function setCookie(c_name,value){
		document.cookie=c_name+ "=" +escape(value);
	}

	function getCookie(c_name){
		if (document.cookie.length>0){
			var c_start=document.cookie.indexOf(c_name + "=");
			var c_end = "";
			if (c_start!=-1){
				c_start=c_start + c_name.length+1;
				c_end=document.cookie.indexOf(";",c_start);
			if (c_end==-1) c_end=document.cookie.length;
			return unescape(document.cookie.substring(c_start,c_end));
			}
		}	
	return "";
	}

	function deleteCookie(c_name){
		setCookie (c_name,"");
	}

	function retainJiveView() {
			if(getCookie('view')!=null && getCookie('view')!='') {
				toggleJiveView(getCookie('view'));
			}else {
				toggleJiveView('thread');
			}
	}


   function Pager(tableName, itemsPerPage,view) {  
       this.tableName = tableName;  
       this.itemsPerPage = itemsPerPage;  
       this.currentPage = 1;  
       this.pages = 0;  
       this.inited = false;  
         
       this.showRecords = function(from, to) {          
           var rows = document.getElementById(tableName).rows;
		   // i starts from 1 to skip table header row  
           for (var i = 1; i < rows.length; i++) {
               if (i < from || i > to)    
                   rows[i].style.display = 'none';  
               else  
                   rows[i].style.display = '';  
           }  
       }  
         
       this.showPage = function(pageNumber) {  
       if (! this.inited) {  
        //alert("not inited");  
        return;  
       }  
		
		  if(view=='q'){	
			  var oldPageAnchor = document.getElementById('qpg'+this.currentPage);
              oldPageAnchor.className = 'pg-normal'; 
  		  } else {
			  var oldPageAnchor = document.getElementById('fpg'+this.currentPage);
			  oldPageAnchor.className = 'pg-normal'; 
		  }	

            
          this.currentPage = pageNumber;
		  
		  if(view=='q'){	
			  var newPageAnchor = document.getElementById('qpg'+this.currentPage);
              newPageAnchor.className = 'pg-selected'; 
  		  } else {
			  var newPageAnchor = document.getElementById('fpg'+this.currentPage);
			  newPageAnchor.className = 'pg-selected'; 
		  }

         
          var from = (pageNumber - 1) * itemsPerPage + 1;  
          var to = from + itemsPerPage - 1;  
          this.showRecords(from, to);  
      }     
        
       this.prev = function() {  
           if (this.currentPage > 1)  
               this.showPage(this.currentPage - 1);  
       }  
         
       this.next = function() {  
           if (this.currentPage < this.pages) {  
               this.showPage(this.currentPage + 1);  
           }  
       }                          
         
       this.init = function() {  
           var rows = document.getElementById(tableName).rows;  
           var records = (rows.length - 1);   
           this.pages = Math.ceil(records / itemsPerPage);  
           this.inited = true;  
       }  
     
       this.showPageNav = function(pagerName, positionId) {  
        if (! this.inited) {  
        //alert("not inited");  
        return;  
       }  
       var element = document.getElementById(positionId);  
         
       var pagerHtml = '<span onclick="' + pagerName + '.prev();" class="pg-normal">  Prev </span> | ';  
          for (var page = 1; page <= this.pages; page++)   

		  if(view=='q'){	
			pagerHtml += '<span id="qpg' + page + '" class="pg-normal" onclick="' + pagerName + '.showPage(' + page + ');">' + page + '</span> | ';  
		  } else {
			pagerHtml += '<span id="fpg' + page + '" class="pg-normal" onclick="' + pagerName + '.showPage(' + page + ');">' + page + '</span> | ';  		 
		  }
          
         pagerHtml += '<span onclick="'+pagerName+'.next();" class="pg-normal"> Next </span>';              
         element.innerHTML = pagerHtml;
       }  
  } 



</script>
