	<script type="text/javascript">
		var verticalView = true;
		FlashDetect.check(9, "presentationContent", "The presentation player requires <a href='http://www.macromedia.com/go/getflashplayer' target='_blank'>Flash version 9</a>.", "Please install <a target='_blank' href='http://www.adobe.com/go/getflashplayer'>Flash player</a>.");
        function setSlideAreaHorizontal(){
            var slideAreaWidth = $("#presentationContent").width() - $("#playerComponent").width()-20;
            var ratio = 100 - (slideAreaWidth * 100) / 720;
            desiredHeight = 540 - (540 * ratio) / 100;
            $("#slideArea").height(desiredHeight-10); // -10 because of 5px padding on #slideArea
            $("#slideArea").width(slideAreaWidth-10); // -10 because of 5px padding on #slideArea
            if(desiredHeight-10>300){
              $("#playerComponent").height(desiredHeight-10);
              $("#summaryComponent").height(desiredHeight-250);
            } else{
              $("#playerComponent").height(300);
              $("#summaryComponent").height(60);
            }
		}
		$(window).resize(function() {
			if(verticalView) {
            	setSlideAreaVertical();
			}
			else {
            	setSlideAreaHorizontal();
			}
		});
		function setSlideAreaVertical(){
			var slideAreaWidth = $("#playerComponent").width();
			var ratio = 100 - (slideAreaWidth * 100) / 720;
			desiredHeight = 540 - (540 * ratio) / 100;
            $("#slideArea").height(desiredHeight);
            $("#slideArea").width(slideAreaWidth);
		}

		function setHorizontalView() {
			$('#lhv').css('font-weight','bold');
			$('#lhv').css('color', '#000000');
			$('#lvv').css('font-weight','normal');
			$('#lvv').css('color', '#1C497B');			
			$('#playerComponent').css('width','320px');			
			$('#FLVScrubber').css('margin-right','0px');
			$('#summaryComponent').css('height','350px');					
			$('#playerComponent').css('height','590px');
			$('#clearLine').css('height','240px');
			$('#slideArea').css('margin-left','6px');			
			setSlideAreaHorizontal();
			verticalView = false;
			
		}

		function setVerticalView() {
			$('#lvv').css('font-weight','bold');
			$('#lvv').css('color', '#000000');
			$('#lhv').css('font-weight','normal');
			$('#lhv').css('color', '#1C497B');
			$('#playerComponent').css('width','auto');
			$('#FLVScrubber').css('margin-right','10px');
			$('#summaryComponent').css('height','240px');
			$('#playerComponent').css('height','240px');
			$('#clearLine').css('height','0px');
			$('#slideArea').css('margin-left','0px');
			setSlideAreaVertical();
			verticalView = true;
		}

	</script>
		
	








