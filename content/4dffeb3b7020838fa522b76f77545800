<script type="text/javascript" language="javascript">
function getCookie(c_name) {
  if (document.cookie.length>0) {
    c_start=document.cookie.indexOf(c_name + "=");
    if (c_start!=-1) {
      c_start=c_start + c_name.length+1;
      c_end=document.cookie.indexOf(";",c_start);
      if (c_end==-1) c_end=document.cookie.length; {
        return unescape(document.cookie.substring(c_start,c_end));
      }
    }
  }
  return "";
}
</script>
<script type="text/javascript" src="http://js.revsci.net/gateway/gw.js?csid=J08782" charset="ISO-8859-1"></script>
<script language="JavaScript" type="text/javascript">
  DM_addEncToLoc("vChannel", "home");

  if(typeof isSubscriber == 'function') {
    // function exists, so we can now call it
    DM_addEncToLoc("isSubscriber", isSubscriber());
  }
  DM_addEncToLoc("country", getCookie('P_CC'));
  DM_addEncToLoc("gender", getCookie('P_CG'));
  DM_addEncToLoc("jobtitle", getCookie('P_JT'));

  // recommended
  var re = getCookie('RECOMMENDATIONS');
  if(re.length) DM_addEncToLoc("recommended", "Yes");
  else DM_addEncToLoc("recommended", "No");
  // commented
  var co = getCookie('P_CO');
  if(co.length) DM_addEncToLoc("commented", co);
  else DM_addEncToLoc("commented", "No");
  // newsletter
  var valueArray = getCookie('P_NL').split(',');
  for(var i=0; i<valueArray.length; i++){
    DM_addEncToLoc("newsletter", valueArray[i]);
  }
  var valueArray = getCookie('P_PL').split(',');
  for(var i=0; i<valueArray.length; i++){
    DM_addEncToLoc("privilege", valueArray[i]);
  }
  // subscription time left
  DM_addEncToLoc("subscription", getCookie('P_SL'));
  DM_tag();
</script>
