<div class="module" id="chat-feature">



<h4><a href="http://chat.stackexchange.com" id="h-chat-link">Visit Chat</a></h4>


<div class="related" id="ad502-rooms"></div>

<script type="text/javascript">
// <!--
    var ad502_chatUrl = 'http://chat.stackexchange.com';

    $('#ad502-rooms').ready(
    function () {
        var preloaded = {"activeUsers":3,"activeRooms":3,"rooms":[{"name":" Apple Chat","id":38,"lastPost":{"friendly":"8 hours ago", "raw":1293231601, "absolute":"12/24/2010 11:00:01 PM"},"posts":363,"users":[{"name":"calavera","id":518,"emailhash":"68a4eaf8b48b10303ca0cc2d6764c5f7","lastPost":{"friendly":"9 hours ago", "raw":1293226843, "absolute":"12/24/2010 9:40:43 PM"},"rep":5242}],"messages":[{"html":"@calavera Not really, probably seeing some friends but everyone is abroad (or technically I am), gf, family, etc. So I’m stuck here :)","markdown":"@calavera Not really, probably seeing some friends but everyone is abroad (or technically I am), gf, family, etc. So I’m stuck here :)","date":1293231601,"user":"Martín Marconcini","userid":609}],"events":[]}]};        
        displayRooms(preloaded, null, null);
    });

    function htmlEncode(str){
        var div = $('<div><\/div>');
        div.text(str);
        return div.html().replace('"', '&quot;');
    }

    function loadAd() {
        $.get(
            '/api/recent-chat',
            null,
            function (data, text, req) { displayRooms(data, text, req); });
    }

    // Build a summary line of the last 5 users to talk, in order
    function usersBox(users) {
        var box = $('<div class="ad502-users"><\/div>');

        users = users.sort(function (u1, u2) { 
            if(!u1.lastPost || !u1.lastPost.raw) return -1;
            if(!u2.lastPost || !u2.lastPost.raw) return 1;

            return u2.lastPost.raw - u1.lastPost.raw; 
        });

        for (var i = 0; i < users.length && i < 7; i++) {
            var user = users[i];

            if(!user.lastPost || !user.lastPost.friendly) continue;

            var chatProfile = ad502_chatUrl + '/users/' + user.id;
            var gravatar = 'http://www.gravatar.com/avatar/' + user.emailhash + '?s=23&amp;d=identicon&amp;r=PG';
            var userBox = $('<a href="' + chatProfile + '"><img alt="" title="' + htmlEncode(user.name) + ': '+user.lastPost.friendly + '" src="' + gravatar + '"><\/a>');
            box.append(userBox);
        }

        return box;
    }

    // Link to the user responsible for the message
    function userLink(msg) {
        var name = msg.user;
        var id = msg.userid;

        if (id)
            return '<a href="' + ad502_chatUrl + '/users/' + id + '">' + htmlEncode(name) + '<\/a>';

       return htmlEncode(name);
    }

    // Callback to build the room list
    function displayRooms(data, textStatus, req) {
        var rooms = $('#ad502-rooms');
        if(data.error != undefined)
        {
            rooms.text(data.error);
            return;
        }

        rooms.html('');

        var roomData = data.rooms;
        roomData = roomData.sort(function (r1, r2) { return r2.lastPost.raw - r1.lastPost.raw; });

        for (var i = 0; i < roomData.length && i < 2; i++) {
            var room = roomData[i];

            var roomLink = ad502_chatUrl + '/rooms/' + room.id;

            var roomDiv = $('<div class="ad502-room"><\/div>');
            roomDiv.append($('<h3 class="ad502-room-h3"><span class="ad502-room-title" title="' + htmlEncode(room.name) + '"><a href="' + roomLink + '">' + htmlEncode(room.name) + '<\/a><\/span><\/h3>'));
            roomDiv.append($('<span title="' + room.lastPost.absolute + '" class="ad502-last-message">' + room.lastPost.friendly + ' - ' + userLink(room.messages[0]) + '<\/span><br>'));
            roomDiv.append(usersBox(room.users));

            rooms.append(roomDiv);
        }
        
        if(data.activeUsers > 1){
            $('#h-chat-link').text(data.activeUsers + " People Chatting");
        }else{
            $('#h-chat-link').text('Visit Chat');
        }

        $('#h-chat-link').attr('title', data.activeUsers + " users active in " + data.activeRooms + " rooms the last 60 minutes");

        window.setTimeout(loadAd, 60 * 1000);
    }
// -->
</script>



