<script type="text/javascript">
jQuery(function() {
jQuery.getFeed({
url: '/jobsFeed.asp',
success: function(feed) {

var nItemCount = feed.items.length < 6 ? feed.items.length : 6;
var sJobHTML = "";
var nCharCount = 100;
for(var i = 0; i < nItemCount; i++) {
var sDesc = feed.items[i].description.length > nCharCount ? feed.items[i].description.substring(0, nCharCount) + "..." : feed.items[i].description;
sJobHTML += "<h4><a href='"+ feed.items[i].link +"?DCMP=A_BA_B1_IJB_FD' target='_blank'>"+ feed.items[i].title +"</a></h4><p>"+ sDesc +"<br/><a href='"+ feed.items[i].link +"' target='_blank'>Read More</a></p>";
}
$("#cwJobFeed").append(sJobHTML);
}
});
});
</script>
