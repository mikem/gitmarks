<script type="text/javascript">
    jQ(document).ready(function(){
    
        jQ('#searchWiz a').click(function(){
            ref = jQ(this).attr('href');
            jQ('#searchWiz a').removeAttr("class");
            jQ('#searchWiz a[href='+ref+']').addClass('expedia-active');
            jQ('#expedia-forms div[rel=search-form]').hide();		
            jQ('#expedia-forms div#'+ref).show();
        return false;
        });
        
        jQ('#expedia-forms *[class!=date]').focus(CancelCal);
        
        jQ('#flt-hot').click(function(){
            jQ('#PkgWithFlight input[name=PackageType]').attr('value','2');
            jQ('#searchWiz a').removeAttr("class");
            jQ(this).addClass('expedia-active');
        });
    
        jQ('#flt-hot-car').click(function(){
            jQ('#PkgWithFlight input[name=PackageType]').attr('value','1');
            jQ('#searchWiz a').removeAttr("class");
            jQ(this).addClass('expedia-active');
        });
    
        jQ('#flt-car').click(function(){
            jQ('#PkgWithFlight input[name=PackageType]').attr('value','5');
            jQ('#searchWiz a').removeAttr("class");
            jQ(this).addClass('expedia-active');
        });
        
    });

	function SyncVals(obj) {
		var sFldNme = obj.form.name + "." + obj.name;
		d = document.forms;
		if (sFldNme == 'CarForm.PickUpLoc' || sFldNme == 'FltForm.ToAirport') {
			d.CarForm.PickUpLoc.value = d.FltForm.ToAirport.value = obj.value;
		} else if (sFldNme == 'FltForm.FromDate' || sFldNme == 'CarForm.FromDate') {
			d.FltForm.FromDate.value = d.CarForm.FromDate.value = obj.value;
		} else if (sFldNme == 'FltForm.ToDate' || sFldNme == 'CarForm.ToDate') {
			d.FltForm.ToDate.value = d.CarForm.ToDate.value = obj.value;
		} else if (sFldNme == 'PkgFormWithFlight.FrAirport'
				|| sFldNme == 'FltForm.FrAirport') {
			d.FltForm.FrAirport.value = obj.value;
		} else if (sFldNme == 'FltForm.NumAdult') {
			d.FltForm.NumAdult.value = obj.value;
		} else if (sFldNme == 'FltForm.NumChild') {
			d.FltForm.NumChild.value = obj.value;
		} else if (sFldNme == 'FltForm.NumSenior') {
			d.FltForm.NumSenior.value = obj.value;
		} else if (sFldNme == 'FltForm.FromTime' || sFldNme == 'CarForm.PickUpTime') {
			d.FltForm.FromTime.value = d.CarForm.PickUpTime.value = obj.value;
		} else if (sFldNme == 'FltForm.ToTime' || sFldNme == 'CarForm.DropTime') {
			d.FltForm.ToTime.value = d.CarForm.DropTime.value = obj.value;
		}
	}
	
	function switchFlightMode(flightMode) {
		returnFlightBox = jQ('#flightReturn');
		if (flightMode == 'return') {
			returnFlightBox.show();
		} else {
			returnFlightBox.hide();
		}
	}
	
	function mrd(i) {
		//Room 1 is always shown by default
		var room2 = jQ('#hotrm2');
		var room3 = jQ('#hotrm3');
		if (i == 1) {
			room2.hide();
			room3.hide();
		}
		if (i == 2) {
			room2.show();
			room3.hide();
		}
		if (i == 3) {
			room2.show();
			room3.show();
		}
	}

</script>

